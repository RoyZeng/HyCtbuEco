@{
    ViewBag.Title = "Index";
}

<link href="~/css/webuploader/webuploader.css" rel="stylesheet" />
<style>
    .jarviswidget > div {
        border: 0;
    }

    .tab-pane {
        margin: 30px 20px;
        padding: 20px;
        border: 1px solid;
    }

    <!-- 消除部分div的show的不完整-- > #login {
        background: none repeat scroll 0 0 rgba(0, 0, 0, 0);
        overflow: visible;
    }

    .form-actions {
        margin: 10px 0 0!important;
        background-color: white;
    }
</style>


<!--通用数据导入向导-->

<div id="content" style="opacity: 1;">

    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark"><i class="fa fa-pencil-square-o fa-fw "></i><span>通用数据导入向导</span></h1>
    </div>


    <div class="row">

        <!-- NEW WIDGET START -->
        <article class="col-sm-12 col-md-12 col-lg-12">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false" data-widget-deletebutton="false">


                <!-- widget div-->
                <div>

                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->

                    </div>
                    <!-- end widget edit box -->

                    <!-- widget content -->
                    <div class="widget-body">

                        <div class="row">

                            <div id="bootstrap-wizard-1" class="col-sm-12">
                                <div class="form-bootstrapWizard">
                                    <ul class="bootstrapWizard form-wizard">
                                        <li class="active" data-target="#step1">
                                            <a href="#tab1" data-toggle="tab">
                                                <span class="step">1</span>
                                                <span class="title">第一步</span> </a>
                                        </li>
                                        <li data-target="#step2">
                                            <a href="#tab2" data-toggle="tab">
                                                <span class="step">2</span> <span class="title">第二步</span> </a>
                                        </li>
                                        <li data-target="#step3">
                                            <a href="#tab3" data-toggle="tab">
                                                <span class="step">3</span> <span class="title">完成，并提交</span> </a>
                                        </li>




                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="tab-content">
                                    <!--试题导入第一步-->
                                    <div class="tab-pane active" id="tab1">
                                        <div class="panel panel-success">
                                            <div class="panel-heading">通用Excel导入工具</div>
                                            <div class="panel-body">


                                                <form class="form-horizontal">
                                                    <label for="select-1" class=" control-label font-md" style="width: 17%; margin-top: 5px; float: left">请选择目标主表：</label>
                                                    <div class="col-md-9">
                                                        @Html.DropDownList("tableName", new SelectList(ViewBag.tableList, "tableTrueName", "tableChineseName"), new { @class = "form-control" })
                                                    </div>
                                                </form>


                                            </div>
                                            <div class="panel-heading">属性选择</div>
                                            <div class="panel-body">
                                                <form class="form-horizontal" >
                                                    <label for="select-1" class=" control-label font-md" style="width: 17%; margin-top: 5px; float: left">请选择城市：</label>
                                                    <div class="col-md-9">
                                                        @Html.DropDownList("cityName", new SelectList(ViewBag.city, "Id", "SAreaName"), new { @class = "form-control" })
                                                    </div>
                                                </form>
                                            </div>

                                        </div>
                                        <div style="height: 100px"></div>


                                    </div>



                                    <!--试题导入第二步-->
                                    <div class="tab-pane" id="tab2">

                                        @Html.Partial("/Views/ImportData/_attrTree.cshtml");

                                    </div>

                                    <!--试题导入第三步-->
                                    <div class="tab-pane" id="tab3">
                                        <div class="panel panel-success">
                                            <div class="panel-heading">通用Excel导入工具</div>
                                            <div class="smart-form" style="height: 100px">
                                                <p class="font-md">请上传指定格式的Excel文件,文件的第一行是字段说明，第二行是字段名，从第三行开始是真正的数据</p>

                                                <div id="uploader-demo" class="wu-example">
                                                    <!--用来存放item-->
                                                    <div id="fileList" class="uploader-list"></div>

                                                    <div id="filePicker"><i class="fa fa-cloud-upload"></i>开始导入</div>
                                                </div>

                                            </div>

                                            <div class="panel-heading">模版下载及使用说明</div>
                                            <div class="smart-form" style="height: 50px">
                                                <a href="~/excelModel/model.xls" class="btn btn-primary" style="width: 190px;margin-top: 10px;">导入模版下载</a>
                                            </div>
                                            <div class="smart-form" style="height: 140px">
                                                1.从<a href="http://211.83.206.52:90/hongguan.htm">中经网统计数据库</a>中导出数据<br />
                                                2.删除sheet1 即“数据序列”<br />
                                                3.在第三行插入一行，第一行为标题，第二行为单位<br />
                                                4.在第三行编辑列名对应到数据库，规则为：<br />
                                                <strong>每列列名中每个字的首字母大写。</strong>
                                                例如<br />
                                                <strong>制造业采购经理指数</strong>  对应  <em>ZZYCGJLZS</em> <br />
                                                <strong>建筑业企业签订合同总额_累计</strong>  对应<em> JZYQYQDHTZELJ</em> 
                                                
                                            </div>
                                        </div>

                                    </div>



                                    <!--按钮组-->
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <ul class="pager wizard no-margin">

                                                    <li class="previous disabled">
                                                        <a href="javascript:void(0);" class="btn btn-lg btn-default">上一步</a>
                                                    </li>



                                                    <li class="next" style="float: right" id="nextid">
                                                        <!--test-->
                                                        <a href="javascript:void(0);" class="btn btn-lg txt-color-darken">下一步 </a>
                                                    </li>
                                                    <li id="testid" style="float: right"><a href="javascript:void(0);" id="hrefID" class="btn btn-lg txt-color-darken  ">提交数据 </a></li>



                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>

                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->

        </article>
        <!-- WIDGET END -->


    </div>
</div>
<script type="text/javascript">
    var pagefunction = function () {
        loadScript(genRndURL("/js/plugin/bootstrap-wizard/jquery.bootstrap.wizard.min.js"), function () {
            loadScript("/Scripts/webuploader/webuploader.js", function () {
                loadScript(genRndURL("/PageJs/SysUser/CommonDataImport.js"), function () {
                    CommonDataImportRunPage();
                });
            });
        });
    };
    pagefunction();

</script>
