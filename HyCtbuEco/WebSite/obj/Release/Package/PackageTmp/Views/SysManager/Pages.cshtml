@{
    Layout = null;
}

<!--树-->


<!--Operation-->
<div class="heading-buttons">


    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa  fa-desktop fa-fw "></i>
            页面管理
        </h1>
    </div>

    <div style="clear: both;">
    </div>
</div>
<!--/Operation-->



<div class="row">

    <div class="widget-body col-sm-4" style="margin-bottom: 5px; margin-top: 5px;">
        <div class="jarviswidget" style="min-height: 350px;">


            <header>
                <h2><strong>结点信息</strong> </h2>
                <div class="widget-toolbar">
                    <button type="button" class="btn btn-success  " id="btnSysRoleAdd"
                        data-bind="click: $root.AddNewNode">

                        <i class="glyphicon glyphicon-plus"></i>
                        新建页面
                    </button>
                    <button type="button" class="btn btn-danger " id="btnSysRoleDel"
                        data-bind="click: $root.DelNode">

                        <i class="glyphicon glyphicon-remove"></i>
                        删除页面
                    </button>
                </div>
            </header>
            <div class="widget-body row" style="min-height: 408px;">

                <!--SysPagePower tree-->
                <ul id="SysPagePowerTree" class="ztree"></ul>

            </div>
        </div>
    </div>
    <!-- end col-sm-61 -->
    <!--/SysRole tree-->
    <!--SysRole  information-->
    <div class="col-sm-8" style="margin-bottom: 5px; margin-top: 5px;">
        <input type="hidden" id="hidId" />
        <div class="jarviswidget" style="min-height: 350px;">


            <header>
                <h2><strong>详细信息</strong> </h2>

            </header>
            <div class="widget-body row">
                <form class="form-horizontal" id="frmSysPagePower" data-bind="with: NodeValue" style="min-height: 350px;">

                    <fieldset>



                        <div class='form-group'>
                            <label class='col-md-2 control-label' style='margin-bottom: 3px;'>菜单名:</label><div class='col-md-9'>
                                <input type='text' id='txtbSMenuName' name='txtbSMenuName' placeholder='菜单名' class='form-control' data-bind='value:SMenuName' /></div>
                        </div>
                        <div class='form-group'>
                            <label class='col-md-2 control-label' style='margin-bottom: 3px;'>菜单路径:</label><div class='col-md-9'>
                                <input type='text' id='txtbSMenuURL' name='txtbSMenuURL' placeholder='菜单项url' class='form-control' data-bind='value:SMenuURL' /></div>
                        </div>
                        <div class='form-group'>
                            <label class='col-md-2 control-label' style='margin-bottom: 3px;'>类型:</label><div class='col-md-9'>
                                <input type='text' id='txtbIType' name='txtbIType' placeholder='' class='form-control' data-bind='value:IType' /></div>
                        </div>
                        <div class='form-group'>
                            <label class='col-md-2 control-label' style='margin-bottom: 3px;'>菜单项图标:</label><div class='col-md-9'>
                                <input type='text' id='txtbSPicUrl' name='txtbSPicUrl' placeholder='菜单项图标' class='form-control' data-bind='value:SPicUrl' /></div>
                        </div>
                        <div class='form-group'>
                            <label class='col-md-2 control-label' style='margin-bottom: 3px;'>菜单类型:</label><div class='col-md-9'>
                                <input type='text' id='txtbIMenuType' name='txtbIMenuType' placeholder='' class='form-control' data-bind='value:IMenuType' /></div>
                        </div>
                        <div class='form-group'>
                            <label class='col-md-2 control-label' style='margin-bottom: 3px;'>是否可删除:</label><div class='col-md-9'>
                                <input type='text' id='txtbIIsDelete' name='txtbIIsDelete' placeholder='' class='form-control' data-bind='value:IIsDelete' />
                            </div>
                        </div>

                        <input type='hidden' id='txtbILevel' name='txtbILevel' class='form-control' data-bind='value:ILevel' />


                    </fieldset>
                </form>

                <div class="widget-footer">

                    <button type="button" id="btnSysPagePowerUpdate" class="btn btn-sm btn-primary" data-bind="click: $root.updateNode">

                        <i class="fa fa-save"></i>
                        保存
                    </button>

                </div>
            </div>



        </div>
    </div>
</div>
<!-- end row -->
<!--/SysPagePower information-->
<!--SysPagePower tree-->




<script>
    pageSetUp();
    var pagefunction = function () {


        loadScript(genRndURL("/PageJs/SysUser/Pages.js"), function () {


            SysPageRunPage();

        });
    };
    pagefunction();
</script>
